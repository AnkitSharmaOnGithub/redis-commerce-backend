{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Ankit Debugger",
            "args": [
                "${workspaceFolder}/app.js"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                // "ts-node/register",
                // "-r",
                // "tsconfig-paths/register"
            ],
            "sourceMaps": true,
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "protocol": "inspector"
        }
    ]
}